{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":semanticCommitScopeDisabled",
        "schedule:earlyMondays"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchDatasources": [
                "go",
                "golang-version"
            ],
            "groupName": "go packages"
        },
        {
          "matchFileNames": ["sdk/**"],
          "enabled": false
        }
    ],
    "dependencyDashboard": true
}
